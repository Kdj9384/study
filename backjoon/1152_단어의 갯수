// 단어의 갯수를 파악하는 문제
// 앞 뒤 공백이 있을수 있다.

import java.util.*;

class Main {
  public static void main(String[] args) {
    Scanner stdln = new Scanner(System.in);
    
    String S = stdln.nextLine();
	  S = S.trim();                     // 문자열의 앞 뒤의 공백 제거
    String[] s = S.split(" ");        // 지정해준 문자를 기준으로 문자열을 나누어 배열에 저장
    if (S.isEmpty())                  // 문자열이 빈 문자열인지 판단
      System.out.println(0);
    else
	  System.out.println(s.length);
  }
}
